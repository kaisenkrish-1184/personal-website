---
import BaseLayout from "../layouts/BaseLayout.astro";
const projects = [
  {
    title: "Replication of Daniel Graves “What Lies Beneath Zero: Censoring, Demand Estimation, and Hidden Beliefs”",
    year: "2025",  
    subtitle: "Replication of empirical results from Graves' JMP + portfolio construction from Hidden Beliefs",
    links: [
      {
        text: "Graves' Paper",
        href: "https://yale.app.box.com/s/vlmkafxglm89f4cwra9ecav9nniyukyw",
      },
      {
        text: "GitHub Repository",
        href: "https://github.com/kaisenkrish-1184/HiddenBeliefsReplication/tree/main",
      },
    ],
    abstract: "This project replicates the core empirical pipeline of Graves (2025), which estimates institutional investors’ unobserved demand for stocks they could have held but chose not to. I construct the Hidden Beliefs Index (HBI) using CRSP, Compustat, and 13F holdings data, and form characteristic-sorted portfolios based on these inferred beliefs. I then evaluate portfolio performance using standard asset-pricing factor models. The results support the paper’s central finding that information embedded in institutional non-holdings is not fully incorporated into prices, giving rise to statistically significant abnormal returns.",
  },
];
---

<BaseLayout title="Projects">
  <section class="projects">
    {projects.map((p) => (
      <article class="project">
        <div class="left">
          <h2 class="title">{p.title}</h2>
          {p.year && <p class="year">{p.year}</p>}
          {p.subtitle && <p class="subtitle">{p.subtitle}</p>}
          {p.collaborators && <p class="collab">{p.collaborators}</p>}

          {p.links && (
  <div class="linkWrap">
    {p.links.map((link) => (
      <a
        class="paperLink"
        href={link.href}
        target="_blank"
        rel="noopener"
      >
        {link.text}
      </a>
    ))}
  </div>
)}
        </div>

        <div class="right">
          <p class="abstract">
<span class="abstractLabel">Project Summary:</span> {p.abstract}          
</p>
        </div>
      </article>
    ))}
  </section>

  <style>
    .projects {
      margin-top: 2.5rem;
    }

    .project {
      display: grid;
      grid-template-columns: 340px 1fr;
      column-gap: 3rem;
      padding: 1.5rem 0;
    }

    .project + .project {
      border-top: 1px solid #e9e9e9;
    }

    .title {
      margin: 0;
      font-size: 2.1rem;
      line-height: 1.15;
      letter-spacing: -0.02em;
      color: #333;
      font-weight: 700;
    }

    .subtitle {
      margin: 0.9rem 0 0 0;
      color: #444;
      font-size: 1.05rem;
    }

    .collab {
      margin: 0.75rem 0 0 0;
      color: #555;
      font-size: 1.05rem;
    }

    .linkWrap {
      margin-top: 2rem;
      display: flex;
      flex-direction: column;
      gap: 0.6rem;
    }

    .paperLink {
      font-size: 1.05rem;        /* smaller, academic */
      font-weight: 600;
      color: #4f7de8;
      text-decoration: underline;
      line-height: 1.4;
    }

    .abstract {
      margin: 0;
      font-size: 1.18rem;
      line-height: 1.9;
      color: #444;
    }

    .abstractLabel {
      font-weight: 700;
      color: #333;
    }

    .year {
      margin: 0.35rem 0 0 0;
      font-size: 0.95rem;
      color: #666;
      font-weight: 500;
      font-style: italic;
    }

    @media (max-width: 900px) {
      .project {
        grid-template-columns: 1fr;
        row-gap: 1.25rem;
      }
      .linkWrap {
        margin-top: 1.25rem;
      }
    }
  </style>
</BaseLayout>
