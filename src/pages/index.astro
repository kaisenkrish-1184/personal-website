---
import BaseLayout from "../layouts/BaseLayout.astro";

const name = "Kaisen Krishnamurthy";
const line1 =
  "I am an undergraduate student at the University of Chicago studying mathematics and economics. I am currently interested in economic development, financial markets, and the effects of AI on society.";
---

<BaseLayout title="Home">
  <section class="hero">
    <img
      class="portrait"
      src="/profile.jpg"
      alt={`${name} portrait`}
    />

    <div class="heroText">
      <h1>{name}</h1>
      <p class="lead">{line1}</p>
    </div>
  </section>

  <style>
    .hero {
      display: flex;
      align-items: center;
      gap: 2.5rem;
      margin-top: 2.5rem;
    }

    /* Keep original image dimensions (no forced square) */
    .portrait {
      height: auto;
      width: auto;
      max-width: 240px; /* prevents huge images */
      border-radius: 16px;
      display: block;
    }

    .heroText h1 {
      margin: 0 0 0.75rem 0;
    }

    .lead {
      margin: 0 0 0.75rem 0;
      font-size: 1.1rem;
    }

    .sublead {
      margin: 0;
      font-size: 1.05rem;
      color: #4a4a4a;
    }

    /* Mobile */
    @media (max-width: 700px) {
      .hero {
        flex-direction: column;
        align-items: flex-start;
      }
      .portrait {
        max-width: 180px;
      }
    }
  </style>
</BaseLayout>
