---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="C.V.">
  <h1>C.V.</h1>

  <div class="cv-wrap">
    <iframe
      src="/cv.pdf"
      title="Curriculum Vitae"
      loading="lazy"
    ></iframe>
  </div>

  <style>
    .cv-wrap {
      margin-top: 1.5rem;
      width: 100%;
      height: 90vh;      /* fills most of the screen */
      border: 1px solid #e5e5e5;
      border-radius: 8px;
      overflow: hidden;
    }
    iframe {
      width: 100%;
      height: 100%;
      border: 0;
    }
  </style>
</BaseLayout>
